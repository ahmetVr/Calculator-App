<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/resultNumber"
        android:layout_above="@+id/allNumbers"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:textAlignment="textEnd"
        android:text="CALCULATOR"
        android:textColor="@color/red"
        android:textSize="50dp" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:id="@+id/allNumbers"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_margin="10dp"
            android:id="@+id/firstButtonLinear">

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:backgroundTint="@color/black"
                android:text="AC"
                android:textSize="25dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:id="@+id/buttonAc"
                ></Button>

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/corner"
                android:text="+/_"
                android:textSize="25dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:id="@+id/buttonPlusDivide"
                ></Button>

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/corner"
                android:text="%"
                android:textSize="25dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:id="@+id/buttonPercent"
                ></Button>

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/corner"
                android:text="รท"
                android:textSize="25dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:id="@+id/buttonDiv"
                ></Button>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_margin="10dp"
            android:id="@+id/secButtonLinear">

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/corner"
                android:text="7"
                android:textSize="25dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:id="@+id/button7"
                ></Button>

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/corner"
                android:text="8"
                android:textSize="25dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:id="@+id/button8"
                ></Button>

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/corner"
                android:text="9"
                android:textSize="25dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:id="@+id/button9"
                ></Button>

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/corner"
                android:text="x"
                android:textSize="25dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:id="@+id/buttonX"
                ></Button>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_margin="10dp"
            android:id="@+id/thirdButtonLinear">

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/corner"
                android:text="4"
                android:textSize="25dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:id="@+id/button4"
                ></Button>

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/corner"
                android:text="5"
                android:textSize="25dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:id="@+id/button5"
                ></Button>

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/corner"
                android:text="6"
                android:textSize="25dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:id="@+id/button6"
                ></Button>

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/corner"
                android:text="-"
                android:textSize="25dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:id="@+id/buttonSub"
                ></Button>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_margin="10dp"
            android:id="@+id/fourthButtonLinear">

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/corner"
                android:text="1"
                android:textSize="25dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:id="@+id/button1"
                ></Button>

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/corner"
                android:text="2"
                android:textSize="25dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:id="@+id/button2"
                ></Button>

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/corner"
                android:text="3"
                android:textSize="25dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:id="@+id/button3"
                ></Button>

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/corner"
                android:text="+"
                android:textSize="25dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:id="@+id/buttonPlus"
                ></Button>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:id="@+id/fifthButtonLinear"
            >

            <Button
                android:layout_width="170dp"
                android:layout_height="80dp"
                android:text="0"
                android:textSize="30dp"
                android:textAlignment="textStart"
                android:layout_margin="5dp"
                android:layout_weight="2"
                android:id="@+id/buttonZer"
                ></Button>



                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text=","
                    android:textSize="25dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:id="@+id/buttonV">
                </Button>

                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="="
                    android:textSize="25dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:id="@+id/buttonEqual"
                    >
                </Button>

        </LinearLayout>


    </LinearLayout>
    


</RelativeLayout>